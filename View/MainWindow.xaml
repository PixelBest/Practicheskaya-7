<Window x:Class="Practicheskaya_7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practicheskaya_7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu HorizontalAlignment="Center" Height="22" VerticalAlignment="Top" Width="800">
            <MenuItem Header="Файл" FontSize="15">
                <MenuItem Header="Создать коллекцию животных" Click="CreateAnimals"/>
                <MenuItem Header="Добавить животное" Click="AddAnimals"/>
                <MenuItem Header="Сохранить данные" Click="SaveData"/>
            </MenuItem>
            <MenuItem Header="Помощь" FontSize="15"/>
        </Menu>
        <DataGrid Name="dataGrid1" HorizontalAlignment="Center" Height="412" Margin="0,22,0,0" VerticalAlignment="Top" Width="780" d:ItemsSource="{d:SampleData ItemCount=5}" RenderTransformOrigin="0.501,0.647" FontSize="20">
        </DataGrid>
    </Grid>
</Window>
